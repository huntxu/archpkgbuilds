pkgname=awesome
pkgver=3.4.11
pkgrel=4
pkgdesc='Highly configurable framework window manager'
arch=('i686' 'x86_64')
url='http://awesome.naquadah.org/'
license=('GPL2')
depends=(
  'cairo'
  'dbus'
  'imlib2'
  'libev'
  'libxdg-basedir'
  'lua'
  'pango'
  'startup-notification'
  'xcb-util-image'
  'xcb-util-keysyms'
  'xcb-util-wm'
  'xorg-xmessage')
makedepends=('gperf' 'cmake' 'imagemagick')
source=("$url/download/${pkgname}-${pkgver}.tar.xz"
        "01-fix_glib2_build.patch"
        "awesome-xcursor.patch")
md5sums=('d6aa71334b5cd4ef63ce69d6c612ecf2'
         'baa179074c36e26ef156ebb2060bfd5c'
         '790df5605968462c34d2d7977bcbf7dd')

build() {
  cd $pkgname-$pkgver
  patch -Np1 -i ../awesome-xcursor.patch
  patch -N -p1 -i ../01-fix_glib2_build.patch

  make CMAKE_ARGS=" -DPREFIX=/usr -DSYSCONFDIR=/etc \
	-DCMAKE_BUILD_TYPE=RELEASE -DGENERATE_MANPAGES=OFF -DGENERATE_LUADOC=OFF"
}

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
}
