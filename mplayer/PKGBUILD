pkgname=mplayer
pkgver=34800
pkgrel=1
pkgdesc="A movie player for linux"
arch=('i686' 'x86_64')
license=('GPL')
url="http://www.mplayerhq.hu/"
depends=('alsa-lib' 'libmad' 'libvorbis' 'libtheora' 'libvpx' 'lame' 'libva' 'faac' 'libxv' 'libxvmc')
#x264 xvidcore
makedepends=('subversion' 'pkgconfig' 'yasm' 'git')
_svntrunk=svn://svn.mplayerhq.hu/mplayer/trunk
_svnmod=mplayer

build() {
  cd ${startdir}/${_svnmod}/ffmpeg && git pull
  cd ${srcdir}
  rsync -a --exclude='.svn/' --exclude='.git/' ../${_svnmod}/ ${_svnmod}

# --enable-termcap \
# --enable-freetype \
# --enable-fontconfig \
# --disable-dvdread \
# --enable-dvdread-internal \
# --enable-ffmpeg_a \
# --enable-ffmpeg_so \
# --enable-pthreads \
# --enable-x11 \

  cd ${srcdir}/${_svnmod}
  ./configure --prefix=/usr --confdir=/etc/mplayer \
       	      --enable-mencoder \
       	      --disable-gui \
	      --disable-gtk1 \
              --enable-termios \
              --enable-iconv \
              --disable-langinfo \
	      --disable-lirc \
	      --disable-lircc \
	      --disable-joystick \
	      --disable-apple-remote \
	      --disable-apple-ir \
              --enable-vm \
              --enable-xf86keysym \
	      --disable-radio \
	      --disable-radio-capture \
	      --disable-radio-v4l2 \
	      --disable-radio-bsdbt848 \
              --enable-tv \
	      --disable-tv-v4l1 \
              --enable-tv-v4l2 \
	      --disable-tv-bsdbt848 \
	      --disable-pvr \
              --enable-rtc \
              --enable-networking \
	      --disable-winsock2_h \
	      --disable-smb \
	      --disable-live \
	      --disable-nemesi \
              --disable-vcd \
              --disable-bluray \
       	      --disable-dvdnav \
              --enable-libdvdcss-internal \
              --disable-cdparanoia \
	      --disable-cddb \
              --disable-bitmap-font \
              --disable-unrarexec \
	      --disable-menu \
              --enable-sortsub \
	      --disable-fribidi \
	      --disable-enca \
	      --disable-maemo \
	      --disable-macosx-finder \
	      --disable-macosx-bundle \
	      --disable-inet6 \
	      --disable-gethostbyname2 \
	      --disable-ftp \
	      --disable-vstream \
	      --disable-w32threads \
              --enable-ass-internal \
              --enable-ass \
	      --disable-rpath \
	      --disable-gif \
	      --enable-png \
	      --disable-mng \
	      --disable-jpeg \
	      --disable-libcdio \
	      --disable-liblzo \
              --disable-win32dll \
              --disable-qtx \
	      --enable-xanim \
              --disable-real \
              --disable-libdirac-lavc \
              --disable-libschroedinger-lavc \
              --disable-libnut \
              --disable-libavcodec_mpegaudio_hp \
              --enable-tremor-internal \
              --disable-tremor-low \
              --disable-tremor \
              --disable-speex \
              --disable-libgsm \
              --disable-faad \
              --disable-ladspa \
              --disable-libbs2b \
              --disable-libdv \
              --disable-mpg123 \
              --enable-mad \
              --disable-toolame \
              --disable-twolame \
              --disable-xmms \
              --disable-libdca \
              --disable-mp3lib \
              --disable-liba52 \
              --enable-libmpeg2 \
              --enable-libmpeg2-internal \
              --disable-musepack \
              --disable-libopencore_amrnb \
              --disable-libopencore_amrwb \
              --disable-libopenjpeg \
	      --disable-vidix \
	      --disable-vidix-pcidb \
	      --disable-dhahelper \
	      --disable-svgalib_helper \
	      --disable-gl \
              --disable-matrixview \
	      --disable-dga2 \
	      --disable-dga1 \
	      --disable-vesa \
	      --disable-svga \
	      --disable-sdl \
      	      --disable-aa \
      	      --disable-caca \
      	      --disable-ggi \
      	      --disable-ggiwmh \
	      --disable-direct3d \
      	      --disable-directx \
      	      --disable-dxr2 \
      	      --disable-dxr3 \
      	      --disable-ivtv \
      	      --disable-v4l2 \
      	      --disable-dvb \
      	      --disable-mga \
      	      --disable-xmga \
	      --enable-xv \
	      --enable-xvmc \
	      --disable-vdpau \
              --enable-vm \
	      --disable-xinerama \
	      --disable-xshape \
	      --disable-xss \
      	      --enable-fbdev \
	      --disable-mlib \
	      --disable-3dfx \
	      --disable-tdfxfb \
	      --disable-s3fb \
	      --disable-wii \
              --disable-directfb \
      	      --disable-zr \
	      --disable-bl \
	      --disable-tdfxvid \
	      --disable-xvr100 \
     	      --disable-tga \
      	      --disable-pnm \
	      --disable-md5sum \
	      --disable-yuv4mpeg \
	      --disable-corevideo \
	      --disable-quartz \
	      --enable-alsa \
	      --disable-ossaudio \
      	      --disable-arts \
	      --disable-esd \
              --disable-pulse \
	      --disable-jack \
	      --disable-openal \
	      --disable-nas \
	      --disable-sgiaudio \
	      --disable-sunaudio \
	      --disable-dart \
	      --disable-win32waveout \
	      --disable-coreaudio \
	      --disable-select

    sed 's|-march=i486|-march=native|g' -i config.mak
    make
    make DESTDIR=${pkgdir} install
	
    install -m644 ${srcdir}/mplayer/etc/{input.conf,example.conf,menu.conf,codecs.conf} ${pkgdir}/etc/mplayer
    rm -rf ${pkgdir}/usr/share/mplayer/font

    # make distclean
}
